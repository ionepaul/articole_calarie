@{
    ViewBag.Title = "Contact";
}

<div class="main-content contact-page">
    <div class="container">
        <div class="contact-content">
            <div class="info-contact">
                <div class="row">
                    <div class="col-ss-12 col-xs-4 col-lg-4">
                        <div class="box-contact">
                            <h4 class="title"><span class="icon"><i class="fa fa-phone" aria-hidden="true"></i></span>Hotline</h4>
                            <h5 class="subtitle">(+100) 123 456 7890 - (+100) 123 456 7899</h5>
                        </div>
                    </div>
                    <div class="col-ss-12 col-xs-4 col-lg-4">
                        <div class="box-contact">
                            <h4 class="title"><span class="icon"><i class="fa fa-envelope-o" aria-hidden="true"></i></span>Email Us</h4>
                            <h5 class="subtitle">Support@maxstore.com</h5>
                        </div>
                    </div>

                    <div class="col-ss-12 col-xs-4 col-lg-4">
                        <div class="box-contact">
                            <h4 class="title"><span class="icon"><i class="fa fa-map-marker" aria-hidden="true"></i></span>Store Location</h4>
                            <h5 class="subtitle">608 Fifth Avenue, New York, NY 10020</h5>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-6">
                        <input type="text" class="input-info" placeholder="Name*">
                    </div>
                    <div class="col-xs-12 col-sm-6">
                        <input type="text" class="input-info" placeholder="Email*">
                    </div>
                    <div class="col-xs-12 col-sm-12">
                        <textarea rows="6" class="input-info input-content" placeholder="Your message"></textarea>
                    </div>
                </div>
                <a href="#" class="submit send">Send message</a>
            </div>
        </div>
    </div>
</div>