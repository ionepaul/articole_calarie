@model PagedList.IPagedList<ArticoleCalarie.Models.OrderViewModel>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Listă produse";
}

<div class="page-wrapper">
    <div class="product-list-header">
        <h3 class="form-title">Comenzi</h3>
        <div class="special-btns-container">
            <button id="all-orders-btn" class="orders-special-btn">Toate</button>
            <button id="completed-orders-btn" class="orders-special-btn">Complete</button>
            <button id="registred-orders-btn" class="orders-special-btn">Noi</button>
            <button id="shipped-orders-btn" class="orders-special-btn">Trimise</button>
            <button id="confirmed-orders-btn" class="orders-special-btn">Confirmate</button>
        </div>
    </div>

    @Html.Partial("_OrderListPartial", Model)

</div>

@section scripts {
    <script src="~/Scripts/order-list-admin.js"></script>
}
