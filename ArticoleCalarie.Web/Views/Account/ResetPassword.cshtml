@model ArticoleCalarie.Models.ResetPasswordViewModel

@{
    ViewBag.Title = "Resetează parola";
}

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="page-wrapper page-wrapper-small">
        <h3 class="form-title">Reset your password.</h3>
        <section class="form-wrapper reset-password">
            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Code)
            <div class="form-group">
                <div class="col-md-12">
                    <i class="fa fa-envelope" aria-hidden="true"></i>
                    @Html.TextBoxFor(m => m.Email, new { @class = "input-info form-control", @placeholder = Html.DisplayNameFor(m => m.Email) })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <i class="fa fa-lock" aria-hidden="true"></i>
                    @Html.PasswordFor(m => m.Password, new { @class = "input-info form-control", @placeholder = Html.DisplayNameFor(m => m.Password) })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <i class="fa fa-lock" aria-hidden="true"></i>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input-info form-control", @placeholder = Html.DisplayNameFor(m => m.ConfirmPassword) })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <input type="submit" class="btn my-btn-default my-btn-default-full-width" value="Reset" />
                </div>
            </div>
        </section>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
